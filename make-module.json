{
    "name": "Timer API",
    "description": "Integration with Timer API for tracking time intervals",
    "connection": {
      "parameters": {
        "baseUrl": {
          "type": "text",
          "label": "API Base URL",
          "required": true
        },
        "apiToken": {
          "type": "text",
          "label": "API Token",
          "required": true
        }
      }
    },
    "triggers": [
      {
        "name": "New Timer Started",
        "identifier": "timerStarted",
        "description": "Triggers when a new timer is started",
        "type": "webhook",
        "handler": "handleTimerStarted"
      },
      {
        "name": "Timer Stopped",
        "identifier": "timerStopped",
        "description": "Triggers when a timer is stopped",
        "type": "webhook",
        "handler": "handleTimerStopped"
      }
    ],
    "actions": [
      {
        "name": "Start Timer",
        "identifier": "startTimer",
        "description": "Starts a new timer",
        "operation": {
          "url": "/timer/start",
          "method": "POST"
        }
      },
      {
        "name": "Stop Timer",
        "identifier": "stopTimer",
        "description": "Stops an existing timer",
        "operation": {
          "url": "/timer/stop/{id}",
          "method": "POST"
        },
        "parameters": {
          "id": {
            "type": "number",
            "label": "Timer ID",
            "required": true
          }
        }
      }
    ]
  }